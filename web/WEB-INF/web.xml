<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>controllerConnexion</servlet-name>
        <servlet-class>com.model.controllers.controllerConnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controllerInscription</servlet-name>
        <servlet-class>com.model.controllers.controllerInscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controllerConnexion</servlet-name>
        <url-pattern>/controllerConnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controllerInscription</servlet-name>
        <url-pattern>/controllerInscription</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
